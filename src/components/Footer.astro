---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__container container">
    <div class="footer__brand">
      <span class="footer__logo">First 100</span>
      <p class="footer__tagline">First words for kids — in hundreds of languages.</p>
    </div>
    
    <nav class="footer__links" aria-label="Footer navigation">
      <a href="/languages" class="footer__link">Languages</a>
      <a href="/privacy" class="footer__link">Privacy</a>
      <a href="mailto:hello@first100.app" class="footer__link">Contact</a>
    </nav>
    
    <p class="footer__copyright">
      © {currentYear} First 100. All rights reserved.
    </p>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-surface);
    border-top: 1px solid var(--color-border-soft);
    padding: var(--space-12) 0 var(--space-8);
    margin-top: auto;
  }
  
  .footer__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    text-align: center;
  }
  
  .footer__brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }
  
  .footer__logo {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    letter-spacing: var(--letter-spacing-tight);
  }
  
  .footer__tagline {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
  
  .footer__links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4) var(--space-6);
  }
  
  .footer__link {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer__link:hover {
    color: var(--color-accent);
  }
  
  .footer__copyright {
    font-size: var(--font-size-xs);
    color: var(--color-text-soft);
  }
</style>
