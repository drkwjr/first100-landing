---
const categories = [
  'Animals',
  'Colors',
  'Body Parts',
  'Family',
  'Food & Drink',
  'Numbers',
  'Actions',
  'Nature',
  'Feelings',
  'Core Responses',
  'Home Objects',
  'Daily Words'
];

const languagePairs = [
  ['English', 'Somali'],
  ['English', 'Spanish'],
  ['English', 'Arabic'],
  ['English', 'French'],
  ['English', 'Swahili'],
  ['English', 'Amharic']
];
---

<section class="category-roadmap" aria-label="Word pack roadmap">
  <div class="container">
    <header class="category-roadmap__header">
      <p class="category-roadmap__eyebrow">What Kids Learn</p>
      <h2 class="category-roadmap__title">12 everyday categories that build early confidence</h2>
      <p class="category-roadmap__copy">
        Every First 100 language app covers core vocabulary families use most at home, with clear visuals and native-speaker audio.
      </p>
    </header>

    <div class="category-roadmap__chips" role="list" aria-label="Category list">
      {categories.map((category) => (
        <span class="category-roadmap__chip" role="listitem">{category}</span>
      ))}
    </div>

    <div class="category-roadmap__pairs">
      {languagePairs.map(([source, target]) => (
        <article class="category-roadmap__pair">
          <p class="category-roadmap__pair-title">{source} + {target}</p>
          <p class="category-roadmap__pair-copy">Same trusted learning flow, localized for families who speak both languages.</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .category-roadmap {
    padding: var(--space-16) 0;
    background: var(--color-bg);
  }

  .category-roadmap__header {
    max-width: 780px;
    margin: 0 auto;
    text-align: center;
  }

  .category-roadmap__eyebrow {
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.72rem;
    font-weight: var(--font-weight-semibold);
  }

  .category-roadmap__title {
    margin-top: var(--space-3);
    font-size: clamp(1.7rem, 3vw, 2.3rem);
  }

  .category-roadmap__copy {
    margin-top: var(--space-4);
    font-size: var(--font-size-md);
  }

  .category-roadmap__chips {
    margin: var(--space-8) auto 0;
    max-width: 900px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .category-roadmap__chip {
    display: inline-flex;
    align-items: center;
    padding: 9px 14px;
    border-radius: var(--radius-full);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .category-roadmap__pairs {
    margin-top: var(--space-10);
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-4);
  }

  .category-roadmap__pair {
    padding: var(--space-5);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .category-roadmap__pair-title {
    margin: 0;
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    font-size: var(--font-size-base);
  }

  .category-roadmap__pair-copy {
    margin: var(--space-2) 0 0;
    font-size: var(--font-size-sm);
  }

  @media (max-width: 900px) {
    .category-roadmap__pairs {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .category-roadmap__pairs {
      grid-template-columns: 1fr;
    }
  }
</style>
