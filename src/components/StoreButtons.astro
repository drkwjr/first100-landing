---
interface Props {
  appStore?: string | null;
  playStore?: string | null;
  status: 'available' | 'coming-soon';
  size?: 'small' | 'medium' | 'large';
}

const { appStore, playStore, status, size = 'medium' } = Astro.props;
const isAvailable = status === 'available';
---

{isAvailable && (appStore || playStore) ? (
  <div class:list={["store-buttons", `store-buttons--${size}`]}>
    {appStore && (
      <a 
        href={appStore} 
        class="store-button store-button--ios"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Download on the App Store"
      >
        <svg class="store-button__icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <span class="store-button__text">
          <span class="store-button__label">Download on the</span>
          <span class="store-button__store">App Store</span>
        </span>
      </a>
    )}
    
    {playStore && (
      <a 
        href={playStore} 
        class="store-button store-button--android"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Get it on Google Play"
      >
        <svg class="store-button__icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M3 20.5v-17c0-.59.34-1.11.84-1.35L13.69 12l-9.85 9.85c-.5-.24-.84-.76-.84-1.35m13.81-5.38L6.05 21.34l8.49-8.49 2.27 2.27m3.35-4.31c.34.27.56.69.56 1.19s-.22.92-.56 1.19l-2.29 1.32-2.5-2.5 2.5-2.5 2.29 1.3M6.05 2.66l10.76 6.22-2.27 2.27-8.49-8.49z"/>
        </svg>
        <span class="store-button__text">
          <span class="store-button__label">Get it on</span>
          <span class="store-button__store">Google Play</span>
        </span>
      </a>
    )}
  </div>
) : (
  <div class:list={["coming-soon-badge", `coming-soon-badge--${size}`]}>
    <span class="coming-soon-badge__text">Coming Soon</span>
  </div>
)}

<style>
  .store-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
  
  .store-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--color-text);
    color: var(--color-surface);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }
  
  .store-button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    color: var(--color-surface);
  }
  
  .store-button__icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
  
  .store-button__text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }
  
  .store-button__label {
    font-size: 9px;
    font-weight: var(--font-weight-normal);
    opacity: 0.9;
  }
  
  .store-button__store {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
  }
  
  /* Size variants */
  .store-buttons--small .store-button {
    padding: var(--space-1) var(--space-3);
  }
  
  .store-buttons--small .store-button__icon {
    width: 16px;
    height: 16px;
  }
  
  .store-buttons--small .store-button__label {
    font-size: 8px;
  }
  
  .store-buttons--small .store-button__store {
    font-size: var(--font-size-xs);
  }
  
  .store-buttons--large .store-button {
    padding: var(--space-3) var(--space-5);
  }
  
  .store-buttons--large .store-button__icon {
    width: 24px;
    height: 24px;
  }
  
  .store-buttons--large .store-button__store {
    font-size: var(--font-size-base);
  }
  
  /* Coming Soon Badge */
  .coming-soon-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2) var(--space-4);
    background: var(--color-coming-soon-bg);
    border-radius: var(--radius-full);
  }
  
  .coming-soon-badge__text {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-coming-soon);
  }
  
  .coming-soon-badge--small {
    padding: var(--space-1) var(--space-3);
  }
  
  .coming-soon-badge--small .coming-soon-badge__text {
    font-size: var(--font-size-xs);
  }
  
  .coming-soon-badge--large {
    padding: var(--space-3) var(--space-5);
  }
  
  .coming-soon-badge--large .coming-soon-badge__text {
    font-size: var(--font-size-base);
  }
</style>
