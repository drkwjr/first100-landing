---
interface TrustSignal {
  icon: string;
  title: string;
  description: string;
}

const signals: TrustSignal[] = [
  {
    icon: 'no-ads',
    title: 'No Ads',
    description: 'Zero advertising, ever. Just learning.'
  },
  {
    icon: 'offline',
    title: 'Offline Audio',
    description: 'Works without internet connection.'
  },
  {
    icon: 'toddler',
    title: 'For Toddlers',
    description: 'Simple, safe, age-appropriate.'
  },
  {
    icon: 'purchase',
    title: 'One-Time Purchase',
    description: 'No subscriptions or hidden fees.'
  }
];
---

<section class="trust-signals">
  <div class="trust-signals__grid">
    {signals.map((signal) => (
      <div class="trust-signal">
        <div class="trust-signal__icon" aria-hidden="true">
          {signal.icon === 'no-ads' && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"/>
            </svg>
          )}
          {signal.icon === 'offline' && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
          )}
          {signal.icon === 'toddler' && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 12h.01"/>
              <path d="M15 12h.01"/>
              <path d="M10 16c.5.3 1.2.5 2 .5s1.5-.2 2-.5"/>
              <path d="M19 6.3a9 9 0 0 1 1.8 3.9 2 2 0 0 1 0 3.6 9 9 0 0 1-17.6 0 2 2 0 0 1 0-3.6A9 9 0 0 1 12 3c2 0 3.5 1.1 3.5 2.5s-.9 2.5-2 2.5c-.8 0-1.5-.4-1.5-1"/>
            </svg>
          )}
          {signal.icon === 'purchase' && (
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
              <line x1="7" y1="7" x2="7.01" y2="7"/>
            </svg>
          )}
        </div>
        <div class="trust-signal__content">
          <h3 class="trust-signal__title">{signal.title}</h3>
          <p class="trust-signal__description">{signal.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .trust-signals {
    padding: var(--space-16) 0;
    background: var(--color-bg-alt);
  }
  
  .trust-signals__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: 0 var(--space-6);
  }
  
  .trust-signal {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
  }
  
  .trust-signal__icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-soft);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
  }
  
  .trust-signal__icon svg {
    width: 24px;
    height: 24px;
  }
  
  .trust-signal__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .trust-signal__title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0;
  }
  
  .trust-signal__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }
  
  @media (max-width: 1024px) {
    .trust-signals__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 600px) {
    .trust-signals__grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .trust-signal {
      flex-direction: row;
      text-align: left;
    }
  }
</style>
