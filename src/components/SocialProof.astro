---
interface Testimonial {
  quote: string;
  name: string;
  role: string;
}

const metrics = [
  { value: '12', label: 'Everyday word categories' },
  { value: 'Native', label: 'Speaker-recorded audio' },
  { value: 'Ages 1-4', label: 'Early learner design' },
  { value: 'No Sign-in', label: 'Start without accounts' }
];

const testimonials: Testimonial[] = [
  {
    quote: 'My daughter asks for the Somali app every night. The pictures are simple and she actually repeats the words.',
    name: 'Ayaan M.',
    role: 'Parent'
  },
  {
    quote: 'We needed language support for bilingual families. First 100 is clean, focused, and easy for toddlers to use independently.',
    name: 'N. Rivera',
    role: 'Early Years Educator'
  },
  {
    quote: 'No ads and no subscription friction made this an easy yes for our household.',
    name: 'David K.',
    role: 'Parent'
  }
];
---

<section class="social-proof" aria-label="Family and educator testimonials">
  <div class="container">
    <div class="social-proof__metrics">
      {metrics.map((metric) => (
        <article class="social-proof__metric">
          <p class="social-proof__metric-value">{metric.value}</p>
          <p class="social-proof__metric-label">{metric.label}</p>
        </article>
      ))}
    </div>

    <div class="social-proof__testimonials">
      {testimonials.map((testimonial) => (
        <figure class="social-proof__card">
          <blockquote class="social-proof__quote">"{testimonial.quote}"</blockquote>
          <figcaption class="social-proof__author">
            <span>{testimonial.name}</span>
            <span>{testimonial.role}</span>
          </figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>

<style>
  .social-proof {
    padding: var(--space-16) 0;
    background:
      linear-gradient(180deg, rgba(232, 240, 234, 0.65), rgba(255, 255, 255, 0.92));
    border-top: 1px solid var(--color-border-soft);
    border-bottom: 1px solid var(--color-border-soft);
  }

  .social-proof__metrics {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-10);
  }

  .social-proof__metric {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-5);
    text-align: center;
    box-shadow: var(--shadow-sm);
  }

  .social-proof__metric-value {
    margin: 0;
    font-size: clamp(1.35rem, 2vw, 1.8rem);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
  }

  .social-proof__metric-label {
    margin: var(--space-2) 0 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .social-proof__testimonials {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-5);
  }

  .social-proof__card {
    margin: 0;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    display: grid;
    gap: var(--space-4);
  }

  .social-proof__quote {
    margin: 0;
    color: var(--color-text);
    font-size: 0.98rem;
    line-height: 1.65;
  }

  .social-proof__author {
    display: grid;
    gap: 2px;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .social-proof__author span:first-child {
    color: var(--color-text);
    font-weight: var(--font-weight-semibold);
  }

  @media (max-width: 900px) {
    .social-proof__metrics,
    .social-proof__testimonials {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 640px) {
    .social-proof__metrics,
    .social-proof__testimonials {
      grid-template-columns: 1fr;
    }
  }
</style>
