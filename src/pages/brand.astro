---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { withBase } from '../utils/withBase';

const logoOptions = [
  { id: 'logo-option-1-speech-heart', name: 'Speech Heart (Default)' },
  { id: 'logo-option-2-globe-tiles', name: 'Global Tiles' },
  { id: 'logo-option-3-chat-pair', name: 'Dual Chat Heart' },
  { id: 'logo-option-4-sun-bubble', name: 'Sun Bubble' },
  { id: 'logo-option-5-book-voice', name: 'Book Voice' },
  { id: 'logo-option-6-star-voice', name: 'Star Voice' }
];

const iconSpriteRules = [
  'Keep the same rounded speech-bubble silhouette as the master logo.',
  'Use category accent symbols inside the bubble (animals, numbers, family, etc).',
  'Use one language-pair accent color band to distinguish app variants.',
  'Do not add text in icon sprites; rely on store metadata for language naming.'
];
---

<BaseLayout title="Brand Assets" description="Logo options and icon sprite direction for First 100.">
  <Header slot="header" currentPath="/brand" />

  <article class="brand-page">
    <div class="container">
      <header class="brand-page__hero">
        <p class="brand-page__eyebrow">Brand System</p>
        <h1>Logo options and app icon direction</h1>
        <p>The default site logo uses option 1. All options below were generated with the same kid-safe visual style system.</p>
      </header>

      <section class="brand-page__logos" aria-label="Logo options">
        {logoOptions.map((option) => (
          <article class="brand-page__logo-card">
            <img src={withBase(`/brand/logo-options/${option.id}.png`)} alt={option.name} width="220" height="220" loading="lazy" decoding="async" />
            <p>{option.name}</p>
          </article>
        ))}
      </section>

      <section class="brand-page__rules" aria-label="Icon sprite rules">
        <h2>Icon sprite system</h2>
        <ul>
          {iconSpriteRules.map((rule) => (
            <li>{rule}</li>
          ))}
        </ul>
      </section>
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .brand-page {
    padding: var(--space-12) 0 var(--space-20);
  }

  .brand-page__hero {
    max-width: 820px;
    text-align: center;
    margin: 0 auto var(--space-9);
  }

  .brand-page__eyebrow {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.09em;
    font-size: 0.72rem;
    color: var(--color-accent);
    font-weight: var(--font-weight-semibold);
  }

  .brand-page h1 {
    margin-top: var(--space-3);
    font-size: clamp(1.8rem, 3vw, 2.6rem);
  }

  .brand-page__hero p {
    margin-top: var(--space-4);
  }

  .brand-page__logos {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--space-4);
  }

  .brand-page__logo-card {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-surface);
    text-align: center;
    box-shadow: var(--shadow-sm);
  }

  .brand-page__logo-card img {
    width: 100%;
    height: auto;
    background: #f4f4f4;
  }

  .brand-page__logo-card p {
    margin: 0;
    padding: var(--space-3) var(--space-4);
    color: var(--color-text);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .brand-page__rules {
    margin-top: var(--space-10);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    padding: var(--space-6);
  }

  .brand-page__rules h2 {
    margin: 0;
    font-size: var(--font-size-xl);
  }

  .brand-page__rules ul {
    margin: var(--space-4) 0 0;
    padding-left: var(--space-5);
    display: grid;
    gap: var(--space-2);
    color: var(--color-text-muted);
  }
</style>
