---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { withBase } from '../utils/withBase';

const howPath = withBase('/how-it-works');
---

<BaseLayout title="Showcase" description="Showcase has moved into the How It Works page.">
  <Header slot="header" currentPath="/showcase" />

  <main class="showcase-redirect container">
    <p class="showcase-redirect__eyebrow">Page Update</p>
    <h1>Showcase has moved</h1>
    <p>
      All product previews and language examples now live in <a href={howPath}>How It Works</a>.
    </p>
    <a href={howPath} class="showcase-redirect__cta">Go to How It Works</a>
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .showcase-redirect {
    padding: var(--space-16) var(--space-6) var(--space-20);
    text-align: center;
  }

  .showcase-redirect__eyebrow {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.09em;
    font-size: 0.72rem;
    color: var(--color-accent);
    font-weight: var(--font-weight-semibold);
  }

  .showcase-redirect h1 {
    margin-top: var(--space-3);
  }

  .showcase-redirect p {
    margin-top: var(--space-4);
  }

  .showcase-redirect__cta {
    margin-top: var(--space-6);
    display: inline-flex;
    text-decoration: none;
    border-radius: var(--radius-full);
    padding: 10px 18px;
    font-weight: var(--font-weight-semibold);
    color: var(--color-surface);
    background: var(--color-accent);
  }
</style>
