---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LanguageCard from '../components/LanguageCard.astro';
import TrustSignals from '../components/TrustSignals.astro';
import IllustrationField from '../components/IllustrationField.astro';
import StickerSet from '../components/StickerSet.astro';
import languageData from '../data/languages.json';
import stickerData from '../data/stickers.json';

// Featured languages: available first, then coming-soon (homepage only)
const featuredLanguages = languageData.languages
  .filter(lang => lang.featured)
  .sort((a, b) => (a.status === 'available' ? 0 : 1) - (b.status === 'available' ? 0 : 1));
const totalLanguages = languageData.languages.length;
const railStickers = stickerData.stickers;
---

<BaseLayout title="First 100" description="First Words for Kids — in your home language. Tap a picture. Hear the word. No ads.">
  <Header slot="header" currentPath="/" />
  
  <!-- Hero Section -->
  <section class="hero">
    <IllustrationField variant="hero" />
    <div class="hero__content container">
      <h1 class="hero__headline">
        First Words for Kids —<br />
        <span class="hero__headline-accent">in your home language.</span>
      </h1>
      <p class="hero__subheadline">
        Tap a picture. Hear the word. No ads.
      </p>
      <a href="/languages" class="hero__cta">
        Find your language
        <svg class="hero__cta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="5" y1="12" x2="19" y2="12"/>
          <polyline points="12 5 19 12 12 19"/>
        </svg>
      </a>
    </div>
  </section>

  <section class="sticker-rail" aria-label="Sticker translations preview">
    <div class="container">
      <StickerSet variant="rail" stickers={railStickers} />
      <div class="sticker-rail__pitch" role="note" aria-label="Learning value">
        <p class="sticker-rail__eyebrow">Designed For Early Fluency</p>
        <p class="sticker-rail__title">Give families a first-words experience that feels personal, trusted, and ready from day one.</p>
        <p class="sticker-rail__copy">Clean visuals, native-word audio, and culturally familiar vocabulary help children connect faster and keep practicing.</p>
        <a href="/languages" class="sticker-rail__cta">See Available Languages</a>
      </div>
    </div>
  </section>
  
  <!-- Language Preview Section -->
  <section class="languages-preview">
    <div class="container">
      <div class="languages-preview__header">
        <h2 class="languages-preview__title">Popular Languages</h2>
        <a href="/languages" class="languages-preview__link">
          See all {totalLanguages} languages →
        </a>
      </div>
      <div class="languages-preview__grid">
        {featuredLanguages.map((language) => (
          <LanguageCard language={language} />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Trust Signals Section -->
  <TrustSignals />
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-20) 0;
    overflow: hidden;
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
  }
  
  .hero__headline {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    line-height: 1.1;
    margin-bottom: var(--space-6);
    letter-spacing: var(--letter-spacing-tight);
  }
  
  .hero__headline-accent {
    color: var(--color-accent);
  }
  
  .hero__subheadline {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    margin-bottom: var(--space-10);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-semibold);
    color: var(--color-surface);
    background: var(--color-accent);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast), background-color var(--transition-fast);
  }
  
  .hero__cta:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: var(--color-surface);
  }
  
  .hero__cta-icon {
    width: 20px;
    height: 20px;
    transition: transform var(--transition-fast);
  }
  
  .hero__cta:hover .hero__cta-icon {
    transform: translateX(4px);
  }
  
  /* Languages Preview Section */
  .languages-preview {
    padding: var(--space-20) 0;
    background: var(--color-surface);
  }

  .sticker-rail {
    padding: var(--space-4) 0 var(--space-12);
    background:
      radial-gradient(circle at 12% 16%, rgba(168, 213, 186, 0.24), transparent 44%),
      linear-gradient(180deg, rgba(255, 255, 255, 0.66), var(--color-surface));
  }

  .sticker-rail__pitch {
    margin: var(--space-8) auto 0;
    max-width: 880px;
    padding: var(--space-8) var(--space-8);
    border-top: 3px solid rgba(48, 92, 67, 0.4);
    border-radius: var(--radius-xl);
    background: #ffffff;
    box-shadow: 0 14px 30px rgba(28, 40, 34, 0.08);
    text-align: left;
  }

  .sticker-rail__eyebrow {
    margin: 0 0 var(--space-3);
    color: rgba(38, 80, 58, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.7rem;
    font-weight: var(--font-weight-semibold);
  }

  .sticker-rail__title {
    margin: 0;
    font-size: clamp(1.05rem, 2.2vw, 1.5rem);
    line-height: 1.4;
    color: rgba(18, 34, 28, 0.96);
    font-weight: var(--font-weight-semibold);
  }

  .sticker-rail__copy {
    margin: var(--space-4) 0 0;
    max-width: 700px;
    color: var(--color-text-muted);
    font-size: 0.98rem;
    line-height: 1.65;
  }

  .sticker-rail__cta {
    margin-top: var(--space-5);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: 0.92rem;
    color: var(--color-surface);
    background: linear-gradient(180deg, var(--color-accent), #2f6f4f);
    box-shadow: 0 8px 20px rgba(47, 111, 79, 0.3);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .sticker-rail__cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 10px 24px rgba(47, 111, 79, 0.35);
    color: var(--color-surface);
  }
  
  .languages-preview__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-10);
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .languages-preview__title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0;
  }
  
  .languages-preview__link {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .languages-preview__link:hover {
    color: var(--color-accent-hover);
  }
  
  .languages-preview__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
      padding: var(--space-16) 0;
    }

    .sticker-rail {
      padding-bottom: var(--space-9);
    }

    .sticker-rail__pitch {
      margin-top: var(--space-6);
      padding: var(--space-6) var(--space-5);
      border-radius: var(--radius-xl);
    }
    
    .hero__headline {
      font-size: var(--font-size-3xl);
    }
    
    .hero__subheadline {
      font-size: var(--font-size-lg);
    }
    
    .languages-preview__header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
