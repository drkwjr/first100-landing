---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WordDemo from '../components/WordDemo.astro';
import CategoryRoadmap from '../components/CategoryRoadmap.astro';
import { withBase } from '../utils/withBase';

const languagesPath = withBase('/languages');
const showcasePath = withBase('/showcase');
const parentsPath = withBase('/for-parents');
const requestPath = withBase('/request-language');
---

<BaseLayout
  title="How It Works"
  description="See how First 100 helps toddlers learn first words through a simple tap-hear-repeat flow."
>
  <Header slot="header" currentPath="/how-it-works" />

  <article class="how-page">
    <div class="container">
      <header class="how-page__hero">
        <p class="how-page__eyebrow">Product Walkthrough</p>
        <h1 class="how-page__title">A calm, focused learning flow for toddlers</h1>
        <p class="how-page__subtitle">
          Every language app follows the same rhythm: visual cue, native pronunciation, and repetition through play.
        </p>
      </header>

      <section class="how-steps" aria-label="How First 100 works">
        <article class="how-step">
          <p class="how-step__number">1</p>
          <h2 class="how-step__title">Tap a clear visual</h2>
          <p class="how-step__copy">Children see one object at a time with high-recognition illustrations designed for early learners.</p>
        </article>
        <article class="how-step">
          <p class="how-step__number">2</p>
          <h2 class="how-step__title">Hear native pronunciation</h2>
          <p class="how-step__copy">Each word is voiced by native speakers to keep accent and cadence familiar at home and in class.</p>
        </article>
        <article class="how-step">
          <p class="how-step__number">3</p>
          <h2 class="how-step__title">Repeat in short sessions</h2>
          <p class="how-step__copy">Fast loops help toddlers return to words naturally, without ads, popups, or complex controls.</p>
        </article>
      </section>

      <section class="how-screens" aria-label="App screenshots">
        <h2 class="how-screens__title">In-app examples</h2>
        <div class="how-screens__strip">
          <img src={withBase('/screenshots/app-screen-1.png')} alt="First 100 app screenshot showing Somali learning card" width="280" height="580" loading="lazy" decoding="async" />
          <img src={withBase('/screenshots/app-screen-2.png')} alt="First 100 app screenshot showing word categories" width="280" height="580" loading="lazy" decoding="async" />
          <img src={withBase('/screenshots/app-screen-3.png')} alt="First 100 app screenshot showing family vocabulary" width="280" height="580" loading="lazy" decoding="async" />
        </div>
      </section>

      <WordDemo languageSlug="somali" languageName="Somali" nativeName="Soomaali" />

      <CategoryRoadmap />

      <section class="how-page__cta">
        <a href={languagesPath} class="how-page__cta-primary">Browse Languages</a>
        <a href={showcasePath} class="how-page__cta-secondary">View Localization Showcase</a>
        <a href={parentsPath} class="how-page__cta-secondary">See Parent Pricing</a>
        <a href={requestPath} class="how-page__cta-secondary">Request a Language</a>
      </section>
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .how-page {
    padding: var(--space-12) 0 var(--space-20);
  }

  .how-page__hero {
    text-align: center;
    max-width: 820px;
    margin: 0 auto var(--space-12);
  }

  .how-page__eyebrow {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.09em;
    font-size: 0.72rem;
    color: var(--color-accent);
    font-weight: var(--font-weight-semibold);
  }

  .how-page__title {
    margin-top: var(--space-3);
    font-size: clamp(1.9rem, 3.2vw, 3rem);
  }

  .how-page__subtitle {
    margin-top: var(--space-4);
    font-size: var(--font-size-md);
    color: var(--color-text-muted);
  }

  .how-steps {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-5);
    margin-bottom: var(--space-12);
  }

  .how-step {
    padding: var(--space-6);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
  }

  .how-step__number {
    margin: 0;
    width: 32px;
    height: 32px;
    border-radius: 999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-weight-semibold);
    color: var(--color-surface);
    background: var(--color-accent);
  }

  .how-step__title {
    margin: var(--space-3) 0 0;
    font-size: var(--font-size-lg);
  }

  .how-step__copy {
    margin: var(--space-3) 0 0;
    line-height: 1.65;
  }

  .how-screens {
    margin-bottom: var(--space-8);
  }

  .how-screens__title {
    margin-bottom: var(--space-5);
    text-align: center;
  }

  .how-screens__strip {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-4);
  }

  .how-screens__strip img {
    width: 100%;
    height: auto;
    border-radius: 20px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
    background: var(--color-surface);
  }

  .how-page__cta {
    margin-top: var(--space-10);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .how-page__cta-primary,
  .how-page__cta-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: var(--radius-full);
    padding: 10px 18px;
    font-weight: var(--font-weight-semibold);
  }

  .how-page__cta-primary {
    color: var(--color-surface);
    background: var(--color-accent);
  }

  .how-page__cta-secondary {
    color: var(--color-text);
    background: #ffffff;
    border: 1px solid var(--color-border);
  }

  @media (max-width: 900px) {
    .how-steps,
    .how-screens__strip {
      grid-template-columns: 1fr;
    }

    .how-screens__strip {
      max-width: 420px;
      margin: 0 auto;
    }
  }
</style>
